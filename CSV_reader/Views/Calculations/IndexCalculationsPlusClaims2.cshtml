@model CSV_reader.ViewModels.ClaimsPlusCalcsViewModel;

@{
    ViewData["Title"] = "IndexCalculationsPlusClaims";
}
@using System.Security.Claims;


@{
    var userType = User.FindFirstValue("UserType");
}

<!DOCTYPE html>

<html>
<head>
    <title>Rating Guide</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">

    <link href="~/css/site.css" />

    <script src="https://cdn.jsdelivr.net/npm/%40tailwindplus/elements@1" type="module"></script>

</head>


<body id="websiteBody">


    <header class="position-absolute top-0 left-0 right-0 z-50 bg-white">

        <nav class="flex items-center justify-between px-6 py-3 w-full shadow-lg h-24 relative">
            <!-- Left: Home Button -->
            <div class="flex items-center">
                <a href="/Excel/LandingPage" class="text-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">Home</a>
            </div>

            <!-- Center: Logo -->
            <div class="absolute left-1/2 transform -translate-x-1/2">
                <a>
                    <img src="@Url.Content("~/images/pretium_nobackground.png")" alt="Pretium Logo" class="h-16 w-auto" />
                </a>
            </div>

            <div class="md:hidden">
                <button id="hamburgerBtn" class="focus:outline-none">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <div class="hidden md:flex items-center space-x-6">
                <form id="quoteSearchForm" class="p-2 rounded-lg shadow-md border-none bg-gray-200">
                    <span class="font-semibold mb-2 text-black">Search Quotes</span>
                    <div class="flex items-center">
                        <span class="text-gray-700 font-semibold bg-gray-300 py-1 px-2 rounded-md">PAQ</span>
                        <input type="text"
                               name="quoteSearch"
                               id="quoteIdToSearch"
                               required
                               class="bg-gray-100 border border-gray-300 px-2 py-1 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 rounded-md mx-2 w-32"
                               placeholder="Enter Quote #" />
                        <button type="submit"
                                class="bg-blue-600 text-white font-semibold py-1 px-3 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
                            Search
                        </button>
                    </div>
                </form>

                <div class="flex items-center space-x-4">
                    <div class="text-left">
                        <small class="text-gray-600">Logged in as:</small><br />
                        @if (userType == "1")
                        {
                            <a asp-controller="Profile" asp-action="AdminProfileIndex" class="text-blue-700 font-medium">
                                @(User.Identity?.Name ?? "Unknown User")
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Profile" asp-action="ProfileIndex" class="text-blue-700 font-medium">
                                @(User.Identity?.Name ?? "Unknown User")
                            </a>
                        }
                    </div>
                    <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post">
                        <button type="submit" class="font-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>

        <div id="hamburgerMenu" class="md:hidden hidden px-6 py-4 bg-gray-100 shadow-md">


            <div class="text-sm text-gray-800 mb-2">
                <small class="text-gray-600">Logged in as:</small><br />
                @if (userType == "1")
                {
                    <a asp-controller="Profile" asp-action="AdminProfileIndex" class="text-blue-700 font-medium">
                        @(User.Identity?.Name ?? "Unknown User")
                    </a>
                }
                else
                {
                    <a asp-controller="Profile" asp-action="ProfileIndex" class="text-blue-700 font-medium">
                        @(User.Identity?.Name ?? "Unknown User")
                    </a>
                }
            </div>

            <form id="quoteSearchForm" class="p-2 rounded-lg shadow-md border-none bg-gray-200">
                <span class="font-semibold mb-2 text-black">Search Quotes</span>
                <div class="flex items-center">
                    <span class="text-gray-700 font-semibold bg-gray-300 py-1 px-2 rounded-md">PAQ</span>
                    <input type="text"
                           name="quoteSearch"
                           id="quoteIdToSearch"
                           required
                           class="bg-gray-100 border border-gray-300 px-2 py-1 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 rounded-md mx-2 w-32"
                           placeholder="Enter Quote #" />
                </div>
                <button type="submit"
                        class="bg-blue-600 text-white font-semibold py-1 px-3 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
                    Search
                </button>
            </form>

            <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="w-full font-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">
                    Logout
                </button>
            </form>
        </div>

    </header>

    <script>
        // Toggle mobile menu
        document.getElementById("hamburgerBtn")?.addEventListener("click", function () {
            const menu = document.getElementById("hamburgerMenu");
            menu.classList.toggle("hidden");
        });
    </script>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="fixed inset-0 flex items-center justify-center bg-gray-100 bg-opacity-75 z-50">
        <div class="flex flex-col items-center space-y-4">
            <svg class="animate-spin h-10 w-10 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
            </svg>
            <p class="text-lg font-medium text-gray-700 animate-pulse">Loading...</p>
        </div>
    </div>

    <input type="hidden" id="batchIdHidden" value="@ViewBag.BatchId" />

    <div class="pt-24" id="mainContent">


        <div class="md:flex w-full">

            <!---------------------- SIDEBAR -------------------------->
            <div class="w-min shrink-0 hidden md:block">
                <div class="w-full md:w-64 bg-white shadow-xl rounded-lg p-4 space-y-6">

                    <!-- CLIENT INFO -->
                    <div class="space-y-2">
                        <p class="text-sm">
                            <span class="font-bold text-black block">Client Name:</span>
                            <span class="font-semibold text-blue-700" id="clientName">@ViewBag.ClientName</span>
                        </p>

                        <p class="text-sm">
                            <span class="font-bold text-black block">Quote Number:</span>
                            <span class="font-semibold text-blue-700">@ViewBag.QuoteId</span>
                        </p>
                    </div>

                    <!-- TABLE SELECTOR -->
                    <div>
                        <span class="font-bold text-black block mb-2">Tables</span>

                        <label class="text-sm font-medium text-gray-700">Showing</label>
                        <select id="tableSelectDesktop"
                                class="w-full px-2 py-2 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg shadow-md focus:ring-2 focus:ring-blue-500 transition">
                            <option value="historicDataTableSection">Historic Data</option>
                            <option value="businessFCSection">Business Forecast</option>
                            <option value="dataInfSection">Data & Inflated Data</option>
                            <option value="additionalStatsSection">Additional Stats</option>
                            <option value="technicalPriceSection">Technical Price Points</option>
                            <option value="ultimateCostsSection">Ultimate Costs</option>
                        </select>
                    </div>

                    <!-- FILTERS -->
                    <div>
                        <span class="font-bold text-black block mb-3">Filters</span>

                        <form id="combinedForm" class="space-y-4">

                            <!-- MONTHS -->
                            <div>
                                <label class="text-sm font-medium text-gray-700" for="selectedNumOfMonthsDropdown">Months</label>
                                @Html.DropDownList(nameof(Model.ClaimsCalculationsModel.SelectedNumOfMonths),
                                Model.ClaimsCalculationsModel.InflationMonths,
                                                                new { @class = "text-sm w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500", @id = "selectedNumOfMonthsDropdown" })
                            </div>

                            <!-- YEARS -->
                            <div>
                                <label class="text-sm font-medium text-gray-700" for="projYearsDropdown">Years</label>
                                @Html.DropDownList(nameof(Model.ClaimsCalculationsModel.SelectedProjYears),
                                                                Model.ClaimsCalculationsModel.ProjectedYears,
                                                                new { @class = "text-sm w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500", @id = "projYearsDropdown" })
                            </div>

                            <!-- COI FEE -->
                            <div>
                                <label class="text-sm font-medium text-gray-700" for="COIFeeDropdown">COI Fee</label>
                                @Html.DropDownList(nameof(Model.ClaimsCalculationsModel.SelectedCOIFee),
                                                                Model.ClaimsCalculationsModel.ChargeCOIFee,
                                                                new { @class = "text-sm w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500", @id = "COIFeeDropdown" })
                            </div>

                            <!-- METRIC -->
                            <div>
                                <label class="text-sm font-medium text-gray-700" for="pricingMetricDropdown">Metric</label>
                                @Html.DropDownList(nameof(Model.ClaimsCalculationsModel.SelectedPricingMetric),
                                                                Model.ClaimsCalculationsModel.PricingMetrics,
                                                                new { @class = "text-sm w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500", @id = "pricingMetricDropdown" })
                            </div>

                            <!-- PRICE BY -->
                            <div>
                                <label class="text-sm font-medium text-gray-700" for="priceByDropdown">Price By</label>
                                @Html.DropDownList(nameof(Model.ClaimsCalculationsModel.SelectedPriceBy),
                                                                Model.ClaimsCalculationsModel.PriceByFilters,
                                                                new { @class = "text-sm w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500", @id = "priceByDropdown" })
                            </div>

                            <!-- GO BUTTON -->
                            <button type="submit"
                                    id="goButton"
                                    class="w-full bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-blue-700 transition">
                                Go
                            </button>

                        </form>
                    </div>

                    <!-- YEAR CHECKBOXES -->
                    <div class="bg-gray-100 p-3 rounded-lg space-y-2">

                        <span class="font-bold text-black block mb-3">Filter Years</span>
                        <span id="ensure3YearsTextPopup">
                            Select at least 3 years
                        </span>

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year1Name))
                        {
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" class="year-checkbox h-4 w-4 text-blue-600"
                                       name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year1Name" />
                                <span>@Model.ClaimsCalculationsModel.Year1Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year2Name))
                        {
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" class="year-checkbox h-4 w-4 text-blue-600"
                                       name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year2Name" />
                                <span>@Model.ClaimsCalculationsModel.Year2Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year3Name))
                        {
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" class="year-checkbox h-4 w-4 text-blue-600"
                                       name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year3Name" />
                                <span>@Model.ClaimsCalculationsModel.Year3Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year4Name))
                        {
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" class="year-checkbox h-4 w-4 text-blue-600"
                                       name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year4Name" />
                                <span>@Model.ClaimsCalculationsModel.Year4Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year5Name))
                        {
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" class="year-checkbox h-4 w-4 text-blue-600"
                                       name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year5Name" />
                                <span>@Model.ClaimsCalculationsModel.Year5Name</span>
                            </label>
                        }
                        
                    </div>

                    <!-- SELECT YEARS BUTTON -->
                    <button id="selectedYearsBtn"
                            class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md shadow-md hover:bg-blue-700 transition">
                        Select these years
                    </button>

                </div>
            </div>



            <!-------------- HEADER FOR SMALLER DISPLAYS ------------------>
            <div class="mx-4 rounded-lg shadow-lg p-1 border-none bg-white my-4 block md:hidden">

                <div class="flex flex-col md:flex-row items-start justify-between border-none">

                    <!-- CLIENT INFO SECTION -->
                    <div class="flex-grow w-1/8">
                        <div class="rounded-lg p-3">
                            <div class="space-y-4">
                                <p class="text-sm">
                                    <span class="text-2xl block mb-1 font-bold text-black">Client Name:</span>
                                    <span class="text-lg font-semibold text-blue-700" id="clientName">@ViewBag.ClientName</span>
                                </p>
                                <p class="text-sm">
                                    <span class="text-2xl block mb-1 font-bold text-black">Quote Number:</span>
                                    <span class="text-lg font-semibold text-blue-700">@ViewBag.QuoteId</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- TABLE DROPDOWN SECTION -->
                    <div class="flex-grow w-1/8 ">
                        <div class="rounded-lg p-3">
                            <span class="text-2xl font-bold mb-4 block text-black">Tables</span>

                            <div class="relative">
                                <label for="tableSelectMobile" class="text-sm font-medium text-gray-700">Showing</label>
                                <select id="tableSelectMobile"
                                        class="w-full px-2 py-2 text-gray-700 bg-gray-50 border border-gray-300 rounded-lg shadow-md focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
                                    <option value="historicDataTableSection">Historic Data</option>
                                    <option value="businessFCSection">Business Forecast</option>
                                    <option value="dataInfSection">Data & Inflated Data</option>
                                    <option value="additionalStatsSection">Additional Stats</option>
                                    <option value="technicalPriceSection">Technical Price Points</option>
                                    <option value="ultimateCostsSection">Ultimate Costs</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- FORM SECTION - FILTERS -->
                    <div class="flex-grow w-full md:w-1/2">
                        <form id="combinedForm" class="rounded-lg p-3">
                            <span class="font-bold text-2xl mb-6 block text-black">Filters</span>

                            <!-- this div is showing the filters for desktop screens -->
                            <div class="md:grid grid-cols-5 gap-4 hidden">
                                @foreach (var item in new[]
                                    {
                                        new { Id = "selectedNumOfMonthsDropdown", Label = "Months", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedNumOfMonths), List = Model.ClaimsCalculationsModel.InflationMonths },

                                        new {
                                        Id = "projYearsDropdown",
                                        Label = "Years", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedProjYears),
                                        List = Model.ClaimsCalculationsModel.ProjectedYears },

                                        new { Id = "COIFeeDropdown", Label = "COI Fee", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedCOIFee), List = Model.ClaimsCalculationsModel.ChargeCOIFee },
                                        new { Id = "pricingMetricDropdown", Label = "Metric", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedPricingMetric), List = Model.ClaimsCalculationsModel.PricingMetrics },
                                        new { Id = "priceByDropdown", Label = "Price By", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedPriceBy), List = Model.ClaimsCalculationsModel.PriceByFilters }
                                    })
                                {
                                    <div class="relative">
                                        <label for="@item.Id" class="text-sm font-medium text-gray-700">@item.Label</label>
                                        @Html.DropDownList(item.ModelProp, item.List, new { @class = "w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 transition", @id = item.Id })
                                    </div>
                                }
                            </div>

                            <!-- these next two divs are showing the filters on mobile screens. 2 divs as there are 2 rows of dropdown boxes -->
                            <div class="grid grid-cols-3 gap-4 md:hidden">
                                @foreach (var item in new[]
                                    {
                                        new { Id = "selectedNumOfMonthsDropdown", Label = "Months", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedNumOfMonths), List = Model.ClaimsCalculationsModel.InflationMonths },
                                        new { Id = "projYearsDropdown", Label = "Years", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedProjYears), List = Model.ClaimsCalculationsModel.ProjectedYears },
                                        new { Id = "COIFeeDropdown", Label = "COI Fee", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedCOIFee), List = Model.ClaimsCalculationsModel.ChargeCOIFee },
                                    })
                                {
                                    <div class="relative">
                                        <label for="@item.Id" class="text-sm font-medium text-gray-700">@item.Label</label>
                                        @Html.DropDownList(item.ModelProp, item.List, new { @class = "w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 transition", @id = item.Id })
                                    </div>
                                }
                            </div>
                            <div class="grid grid-cols-2 gap-4 md:hidden">
                                @foreach (var item in new[]
                                    {
                                    new { Id = "pricingMetricDropdown", Label = "Metric", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedPricingMetric), List = Model.ClaimsCalculationsModel.PricingMetrics },
                                    new { Id = "priceByDropdown", Label = "Price By", ModelProp = nameof(Model.ClaimsCalculationsModel.SelectedPriceBy), List = Model.ClaimsCalculationsModel.PriceByFilters }
                                    })
                                {
                                    <div class="relative">
                                        <label for="@item.Id" class="text-sm font-medium text-gray-700">@item.Label</label>
                                        @Html.DropDownList(item.ModelProp, item.List, new { @class = "w-full px-2 py-2 bg-gray-100 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 transition", @id = item.Id })
                                    </div>
                                }
                            </div>

                            <div class="mt-6 flex justify-center">
                                <button type="submit"
                                        class="bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-blue-700 transition duration-300"
                                        id="goButton">
                                    Go
                                </button>
                            </div>
                        </form>
                    </div>

                </div>

                <!-- SELECT WHICH YEARS -->
                <form>
                    <div class="space-y-2 bg-gray-100">
                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year1Name))
                        {
                            <span>Year 1</span>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year1Name"
                                       class="year-checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                <span class="text-gray-700">@Model.ClaimsCalculationsModel.Year1Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year2Name))
                        {
                            <span>Year 2</span>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year2Name"
                                       class="year-checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                <span class="text-gray-700">@Model.ClaimsCalculationsModel.Year2Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year3Name))
                        {
                            <span>Year 3</span>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year3Name"
                                       class="year-checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                <span class="text-gray-700">@Model.ClaimsCalculationsModel.Year3Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year4Name))
                        {
                            <span>Year 4</span>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year4Name"
                                       class="year-checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                <span class="text-gray-700">@Model.ClaimsCalculationsModel.Year4Name</span>
                            </label>
                        }

                        @if (!string.IsNullOrEmpty(Model.ClaimsCalculationsModel.Year5Name))
                        {
                            <span>Year 5</span>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="SelectedYears" value="@Model.ClaimsCalculationsModel.Year5Name"
                                       class="year-checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                <span class="text-gray-700">@Model.ClaimsCalculationsModel.Year5Name</span>
                            </label>
                        }
                    </div>

                    <div>
                        <button type="submit" id="selectedYearsBtn" class="mx-4 bg-blue-600 text-white font-semibold py-2 px-4 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
                            Select these years
                        </button>
                    </div>

                </form>

            </div>

             


            <!---------------------- TABLES FROM PARTIAL VIEW ----------------------->
            <div class="flex-grow ml-4">
                <div id="calculationsTablesContainer">
                    @await Html.PartialAsync("_CalculationsTablesPartial", Model)
                </div>
            </div>

        </div>

        <!--------------- SHOW CLAIMS TABLE BUTTON -------------------->
        <button id="toggleTableBtn" class="mx-4 bg-blue-600 text-white font-semibold py-2 px-4 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
            Show Claims
        </button>


        <!----------- CLAIMS LIST PLUS FILTER BOX --------------->

        <div id="claimsLists" class="w-full">


            <div class="gap-6 p-10 w-full">

                <h1 class="display-6 text-black mb-2">Claims</h1>
                <!-------- Filter Section -------->
                <div class="flex flex-wrap gap-6 p-6 max-auto rounded-md bg-gray-200">

                    <!-- Policy Year Filter -->
                    <div class="flex items-center gap-3">
                        <label for="policyYearFilter" class="font-semibold text-black">Policy Year:</label>
                        <select id="policyYearFilter" class="border border-gray-500 rounded-lg px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-500">
                            <option value="">All</option>
                            @foreach (var year in Model.BatchClaims.Select(c => c.PolicyYear).Distinct().OrderBy(y => y))
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                    </div>

                    <!-- Total Incurred Filter -->
                    <div class="flex items-center gap-3">
                        <label for="totalIncurredFilter" class="font-semibold text-black">Total Incurred:</label>
                        <select id="totalIncurredFilter" class="border border-gray-500 rounded-lg px-4 py-2 text-gray-800 focus:ring-2 focus:ring-blue-500">
                            <option value="">All</option>
                            <option value="1000">Over £1,000</option>
                            <option value="5000">Over £5,000</option>
                            <option value="10000">Over £10,000</option>
                        </select>
                    </div>

                    <!-- Vehicle type filter -->
                    @{
                        var uniqueVehTypes = Model.BatchClaims
                        .Select(c => c.VehicleType)
