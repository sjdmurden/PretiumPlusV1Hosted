@model CSV_reader.ViewModels.AdminProfileViewModel;

@{
    ViewData["Title"] = "ProfilePage";
}

<!DOCTYPE html>

<html>
<head>
    <title>Rating Guide</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">

    <link href="~/css/site.css" />
</head>


<body id="websiteBody">

    <header class="position-absolute top-0 left-0 right-0 z-50 bg-white">

        <nav class="flex items-center justify-between px-6 py-3 w-full shadow-lg h-24 relative">
            <!-- Left: Home Button -->
            <div class="flex items-center">
                <a href="/Excel/IndexExcel" class="text-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">Home</a>
            </div>

            <!-- Center: Logo -->
            <div class="absolute left-1/2 transform -translate-x-1/2">
                <a>
                    <img src="@Url.Content("~/images/pretium_nobackground.png")" alt="Pretium Logo" class="h-16 w-auto" />
                </a>
            </div>

            <div class="md:hidden">
                <button id="hamburgerBtn" class="focus:outline-none">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <div class="hidden md:flex items-center space-x-6">
                <form id="quoteSearchForm" class="p-2 rounded-lg shadow-md border-none bg-gray-200">
                    <span class="font-semibold mb-2 text-black">Search Quotes</span>
                    <div class="flex items-center">
                        <span class="text-gray-700 font-semibold bg-gray-300 py-1 px-2 rounded-md">PAQ</span>
                        <input type="text"
                               name="quoteSearch"
                               id="quoteIdToSearch"
                               required
                               class="bg-gray-100 border border-gray-300 px-2 py-1 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 rounded-md mx-2 w-32"
                               placeholder="Enter Quote #" />
                        <button type="submit"
                                class="bg-blue-600 text-white font-semibold py-1 px-3 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
                            Search
                        </button>
                    </div>
                </form>

                <div class="flex items-center space-x-4">
                    <div>
                        <small>Logged in as:</small><br />
                        <span class="text-gray-700">
                            @(User.Identity?.Name ?? "Unknown User")
                        </span>
                    </div>
                    <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post">
                        <button type="submit" class="font-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>

        <div id="hamburgerMenu" class="md:hidden hidden px-6 py-4 bg-gray-100 shadow-md">
            

            <div class="mb-4">
                <small>Logged in as:</small><br />
                <span class="text-gray-700">
                    @(User.Identity?.Name ?? "Unknown User")
                </span>
            </div>

            <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="w-full font-semibold bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300">
                    Logout
                </button>
            </form>
        </div>

    </header>

    <script>
        // Toggle mobile menu
        document.getElementById("hamburgerBtn")?.addEventListener("click", function () {
            const menu = document.getElementById("hamburgerMenu");
            menu.classList.toggle("hidden");
        });
    </script>


    <div class="pt-24">

        <div class="max-w-6xl mx-auto p-6">

            <div class="flex gap-4 mb-4">

                <div class="w-1/2">
                    <h1 class="text-2xl font-semibold mb-6">Admin Profile</h1>

                    <p class="text-gray-600 md:hidden">
                        <span class="font-medium">Email:</span></br>
                        @(User.Identity?.Name ?? "Unknown User")
                    </p>
                </div>

                <div class="w-1/2 md:hidden">
                    <form id="quoteSearchForm" class="p-2 rounded-lg shadow-md border-none bg-gray-200">
                        <span class="font-semibold mb-2 text-black">Search Quotes</span>
                        <div class="flex items-center">
                            <span class="text-gray-700 font-semibold bg-gray-300 py-1 px-2 rounded-md">PAQ</span>
                            <input type="text"
                                   name="quoteSearch"
                                   id="quoteIdToSearch"
                                   required
                                   class="bg-gray-100 border border-gray-300 px-2 py-1 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 rounded-md mx-2 w-32"
                                   placeholder="Enter Quote #" />
                        </div>
                        <button type="submit"
                                class="bg-blue-600 text-white font-semibold py-1 px-3 rounded-md shadow-md hover:bg-blue-700 transition duration-300">
                            Search
                        </button>
                    </form>
                </div>

            </div>

            <div class="bg-white shadow-md rounded-lg p-4 mb-6 hidden md:block">
                <p class="text-gray-600"><span class="font-medium">Email:</span>
                    @(User.Identity?.Name ?? "Unknown User")
                </p>
            </div>

            <div class="flex flex-col md:flex-row gap-6">

                <div class="w-full md:w-1/2">
                    <h2 class="text-xl font-semibold mb-4">All Users</h2>

                    <div class="bg-white rounded-lg overflow-hidden">
                        <table class="min-w-full table-auto border-collapse" id="usersTable">
                            <thead>
                                <tr class="bg-blue-200 text-left text-sm font-medium">
                                    <th class="px-4 py-2 border-b">User Email</th>                            
                                    <th class="px-4 py-2 border-b">Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.AllUsersInfo)
                                {
                                    <tr class="border-t hover:bg-blue-50 text-sm">
                                        <td class="px-4 py-2">@user.UserEmail</td>                                
                                        <td class="px-4 py-2">@user.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="w-full md:w-1/2">

                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-semibold">All Quotes</h2>

                        <div class="flex items-center gap-2">
                            <span>Sort by:</span>
                            <button id="sortCreatedDate" class="font-semibold bg-blue-600 text-white py-1 px-3 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300 cursor-pointer">
                                <span id="sortText">Oldest</span>
                            </button>
                        </div>
                    </div>
                  
                  
                    <div class="bg-white rounded-lg overflow-hidden">
                        <table class="min-w-full table-auto border-collapse" id="myQuotesTable">
                            <thead>
                                <tr class="bg-blue-200 text-left text-sm font-medium text-gray-700">
                                    <th class="px-2 py-2 border-b">User</th>
                                    <th class="px-2 py-2 border-b">Quote ID</th>
                                    <th class="px-2 py-2 border-b">Client Name</th>
                                    <th class="px-2 py-2 border-b">Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var quote in Model.AllUsersQuotes)
                                {
                                    <tr class="border-t hover:bg-blue-50 text-sm">
                                        <td class="px-2 py-2">@quote.UserEmail</td>
                                        <td class="px-2 py-2">
                                            <button class="quote-id-button text-blue-600 hover:underline" data-quote-id="@quote.QuoteId">
                                                @quote.QuoteId
                                            </button>
                                        </td>
                                        <td class="px-2 py-2">@quote.ClientName</td>
                                        <td class="px-2 py-2">@quote.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>

    </div>


    <script src="~/js/QuoteSearchProfilePage.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const table = document.getElementById("myQuotesTable");
            const sortBtn = document.getElementById("sortCreatedDate");
            const sortText = document.getElementById("sortText");

            let ascending = false;  // this is showing the oldest first

            sortBtn.addEventListener("click", function () {
                // select table
                const tbody = table.querySelector("tbody");

                // select all table rows and put them in an array so they can be sorted
                const rows = Array.from(tbody.querySelectorAll("tr"));

                // split the string into date and time parts and then sort them. This is required because the UK date format does not work consistently in all browsers. It is then reconstructed as a string literal and passed to the Date constructor.
                // cells[3] gets the 4th col - the created date
                rows.sort((a, b) => {
                    const parseDate = (str) => {
                        const [datePart, timePart] = str.split(' ');
                        const [day, month, year] = datePart.split('/');

                        return new Date(`${year}-${month}-${day}T${timePart}`);
                    };

                    const dateA = parseDate(a.cells[3].textContent.trim());
                    const dateB = parseDate(b.cells[3].textContent.trim());

                    return ascending ? dateA - dateB : dateB - dateA;
                });

                // Remove and re-append rows in sorted order
                tbody.innerHTML = '';
                rows.forEach(row => tbody.appendChild(row));

                // Toggle direction and text
                ascending = !ascending;
                sortText.textContent = ascending ? "Newest" : "Oldest";
            });
        });
    </script>

</body>




</html>