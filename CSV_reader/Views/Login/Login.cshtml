@{
    ViewData["Title"] = "Login";
}
@model CSV_reader.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rating Guide</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<header class="w-full bg-white shadow-lg">

    <nav class="w-full h-24 flex items-center justify-center">
        <a href="#">
            <img src="@Url.Content("~/images/pretium_nobackground.png")" alt="Pretium Logo" class="h-16 object-contain">
        </a>
    </nav>

</header>

<body id="websiteBody">

    <div class="flex items-center justify-center h-screen w-3/4 mx-auto">

        <div class="shadow-md rounded-lg p-8 max-w-lg w-full bg-white">

            <img src="@Url.Content("~/images/pretium_nobackground.png")" alt="Pretium+ Logo" style="width: 80%;" />

            <h3 class="display-6 text-black">Welcome to Pretium Plus!</h3>
            
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="UserEmail" class="text-black">Email</label>  <!-- asp-for binds a field to a property in the model -->
                    <input asp-for="UserEmail" class="form-control" required="required" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserPassword" class="text-black">Password</label>
                    <input asp-for="UserPassword" type="password" class="form-control" required="required" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        Invalid username or password.
                    </div>
                }

                <button type="submit" class="btn btn-primary">Login</button>

                @* <a href="@Url.Action("Register", "Login")">Sign Up</a> <!-- link to the Register action method in Login controller --> *@

            </form>

             
        </div>
    </div>


</body>


</html>